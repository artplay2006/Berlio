                <div class="g-recaptcha" data-sitekey="6Lf1XeUqAAAAANUNvIIAu3-pGAE0i2qVbBvm5tsP"></div>
            </div>
            <button type="submit" class="btn btn-primary login-button">Продолжить</button>
            <div class="login-links">
                <a asp-area="" asp-controller="Account" asp-action="Authorization" class="register-link">Уже есть аккаунт</a>
                @* <a href="#" class="forgot-password-link">Забыл пароль?</a> *@
            </div>
        </form>
    </div>
</div>